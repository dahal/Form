<%= render 'shared/main_navigation' %>

<div id="fullpage">
  <div class="section active" id="main">
    <div class="column five columns">
      <div class="benifits">
        <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> Easy to use</h5>
        <br>
        <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> No more iframe</h5>
        <br>
        <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> No more AJAX calls</h5>
        <br>
        <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> Use your own Design</h5>
        <br>
        <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"> Free developer account</h5><br>
        <i class="ion-android-checkmark-circle icon-32 text-brand inline"> </i> <h5 class="inline"><a href="#">API</a> & <a href="">Webhooks</a> for third</h5><h5 class="enough-space">party apps integration</h5><br>
        <%= link_to "LETS GET STARTED", new_user_registration_path, :class => 'button button-brand' %>
      </div>
    </div>
    <div class="column six columns">
      <%= image_tag('form-snippet.png') %>
      <br>
      <br>
      <h4><center>Dynamic forms made easy</center></h4>
    </div>

  </div>
  <div class="section" id="signup">

    <div class="on-top">
      <h1 class="text-brand center">Simple form, no backend required</h1>
      <h4 class="center">Use it for
        <span id="email-providers" class="text-blue">contact forms</span>.
      </h4>

      <br>
      <div class="offset-by-three six columns">
        <!-- Mailchimp Subscribe -->
        <%= render 'shared/mailchimp_subscribe' %>
      </div>
    </div>

    <div class="column twelve columns">
      <div class="footer">
        <p class="center"><a href="#">Signup</a><span class="footer-space"></span><a href="">API</a><span class="footer-space"></span><a href="#">Webhooks</a><span class="footer-space"></span><a href="#">FAQ</a></p>
      </div>
    </div>
  </div>

</div>

<script type="text/javascript">
  $(document).ready(function() {
    // fullpage
    $('#fullpage').fullpage({
      sectionsColor: ['#ECECEC','#EAE1C0'],
      navigation: true,
      navigationPosition: 'right',
      navigationTooltips: ['About', 'Get Started']
    });
  });

  // auto changing text
  (function(){
    var words = [ 'contact forms', 'surveys', 'user polls', 'RSPVs', 'mailing list', 'anything & everything' ], i = 0;
    setInterval(function(){
      $('#email-providers').fadeOut(function(){
        $(this).html(words[i=(i+1)%words.length]).fadeIn();
      });
    }, 2000);
  })();
</script>
